{
  "config": {
    "target": "https://localhost:3000",
    "phases": [
      {
        "duration": 2,
        "arrivalRate": 10
      },
      {
        "duration": 20,
        "arrivalRate": 10
      }
    ],
    "processor" : "./load-test-create-user.js"
  },
  "scenarios": [
    {
      "name": "Create Users",
      "flow": [
        {
          "function": "create"
        },
        {
          "post": {
            "url": "/signup",
            "json": {
              "username": "{{ username }}",
              "password": "{{ password }}",
              "email": "{{ email }}"
            },
            "capture": {
              "json": "$.token",
              "as": "token"
            }
          }
        }
        ,{
          "get": {
            "url": "/profiles",
            "headers": {
              "Authorization": "Bearer {{ token }}"
            }
          }
        }
      ]
    }
  ]
}